    <!-- Firebase SDKs -->
    <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-database-compat.js"></script>

    <script>
        // ===== FIREBASE CONFIGURATION =====
        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_PROJECT_ID.firebaseapp.com",
            databaseURL: "https://YOUR_PROJECT_ID.firebaseio.com",
            projectId: "YOUR_PROJECT_ID",
            storageBucket: "YOUR_PROJECT_ID.appspot.com",
            messagingSenderId: "YOUR_SENDER_ID",
            appId: "YOUR_APP_ID"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();

        // ===== APP CONFIGURATION =====
        const CONFIG = {
            maxDataPoints: 20,
            aqiThresholds: {
                good: 50,
                moderate: 100
            }
        };

        // ===== DATA STORAGE =====
        const dataHistory = {
            timestamps: [],
            aqi: [],
            temperature: [],
            humidity: []
        };

        let previousData = null;
        let errorCount = 0;

        // ===== CHART CONFIGURATION =====
        const chartConfig = {
            type: 'line',
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        cornerRadius: 8,
                        titleFont: {
                            size: 14,
                            weight: '600'
                        },
                        bodyFont: {
                            size: 13
                        }
                    }
                },
                scales: {
                    x: {
                        display: true,
                        grid: {
                            display: false
                        },
                        ticks: {
                            maxTicksLimit: 6,
                            font: {
                                size: 11
                            }
                        }
                    },
                    y: {
                        display: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            font: {
                                size: 11
                            }
                        }
                    }
                },
                interaction: {
                    mode: 'nearest',
                    axis: 'x',
                    intersect: false
                },
                animation: {
                    duration: 750,
                    easing: 'easeInOutQuart'
                }
            }
        };

        // ===== INITIALIZE CHARTS =====
        const aqiChart = new Chart(document.getElementById('aqiChart'), {
            ...chartConfig,
            data: {
                labels: [],
                datasets: [{
                    label: 'AQI',
                    data: [],
                    borderColor: '#6366f1',
                    backgroundColor: 'rgba(99, 102, 241, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 4,
                    pointHoverRadius: 6,
                    pointBackgroundColor: '#6366f1',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2
                }]
            }
        });

        const tempChart = new Chart(document.getElementById('tempChart'), {
            ...chartConfig,
            data: {
                labels: [],
                datasets: [{
                    label: 'Temperature (¬∞C)',
                    data: [],
                    borderColor: '#f59e0b',
                    backgroundColor: 'rgba(245, 158, 11, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 4,
                    pointHoverRadius: 6,
                    pointBackgroundColor: '#f59e0b',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2
                }]
            }
        });

        const humidityChart = new Chart(document.getElementById('humidityChart'), {
            ...chartConfig,
            data: {
                labels: [],
                datasets: [{
                    label: 'Humidity (%)',
                    data: [],
                    borderColor: '#10b981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 4,
                    pointHoverRadius: 6,
                    pointBackgroundColor: '#10b981',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2
                }]
            }
        });

        // ===== UTILITY FUNCTIONS =====
        function getAQIStatus(aqi) {
            if (aqi <= CONFIG.aqiThresholds.good) {
                return { text: 'Good', class: 'status-good' };
            } else if (aqi <= CONFIG.aqiThresholds.moderate) {
                return { text: 'Moderate', class: 'status-moderate' };
            } else {
                return { text: 'Poor', class: 'status-poor' };
            }
        }

        function getCurrentTime() {
            const now = new Date();
            return now.toLocaleTimeString('en-US', {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            });
        }

        function updateDataHistory(data) {
            const timestamp = getCurrentTime();

            dataHistory.timestamps.push(timestamp);
            dataHistory.aqi.push(data.aqi);
            dataHistory.temperature.push(data.temperature);
            dataHistory.humidity.push(data.humidity);

            // Keep only last 20 data points
            if (dataHistory.timestamps.length > CONFIG.maxDataPoints) {
                dataHistory.timestamps.shift();
                dataHistory.aqi.shift();
                dataHistory.temperature.shift();
                dataHistory.humidity.shift();
            }
        }

        function updateCharts() {
            // Update AQI Chart
            aqiChart.data.labels = dataHistory.timestamps;
            aqiChart.data.datasets[0].data = dataHistory.aqi;
            aqiChart.update('none'); // Disable animation for smooth updates

            // Update Temperature Chart
            tempChart.data.labels = dataHistory.timestamps;
            tempChart.data.datasets[0].data = dataHistory.temperature;
            tempChart.update('none');

            // Update Humidity Chart
            humidityChart.data.labels = dataHistory.timestamps;
            humidityChart.data.datasets[0].data = dataHistory.humidity;
            humidityChart.update('none');
        }




        async function analyzeWithGemini() {
            const apiKey = document.getElementById('geminiApiKey').value;
            const summaryElement = document.getElementById('aiSummary');
            const btn = document.getElementById('analyzeBtn');

            if (!apiKey) {
                alert("Please enter a valid Gemini API Key.");
                return;
            }

            // Show loading state
            summaryElement.innerHTML = '<div class="spinner" style="width: 20px; height: 20px; border-width: 2px;"></div> Analyzing data with Gemini...';
            btn.disabled = true;
            btn.style.opacity = 0.7;

            // Prepare context data
            const recentData = {
                current: {
                    aqi: dataHistory.aqi[dataHistory.aqi.length - 1],
                    temperature: dataHistory.temperature[dataHistory.temperature.length - 1],
                    humidity: dataHistory.humidity[dataHistory.humidity.length - 1],
                    time: dataHistory.timestamps[dataHistory.timestamps.length - 1]
                },
                history_avg: {
                    aqi: (dataHistory.aqi.reduce((a, b) => a + b, 0) / dataHistory.aqi.length).toFixed(1),
                    temperature: (dataHistory.temperature.reduce((a, b) => a + b, 0) / dataHistory.temperature.length).toFixed(1),
                    humidity: (dataHistory.humidity.reduce((a, b) => a + b, 0) / dataHistory.humidity.length).toFixed(1)
                }
            };

            const prompt = `
                You are an environmental expert AI. Analyze the following air quality data from an IoT sensor:
                
                Current Conditions:
                - AQI: ${recentData.current.aqi}
                - Temperature: ${recentData.current.temperature}¬∞C
                - Humidity: ${recentData.current.humidity}%
                - Time: ${recentData.current.time}

                Historical Average (Last 20 readings):
                - Avg AQI: ${recentData.history_avg.aqi}
                - Avg Temperature: ${recentData.history_avg.temperature}¬∞C
                - Avg Humidity: ${recentData.history_avg.humidity}%

                Provide a concise, 2-3 sentence summary of the air quality, potential health impacts, and simple recommendations. 
                Focus on the relationship between the metrics. Keep it friendly and actionable.
            `;

            try {
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent?key=${apiKey}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        contents: [{
                            parts: [{
                                text: prompt
                            }]
                        }]
                    })
                });

                const data = await response.json();

                if (data.error) {
                    throw new Error(data.error.message);
                }

                const aiResponse = data.candidates[0].content.parts[0].text;

                // Typewriter effect for response
                let i = 0;
                summaryElement.innerHTML = '';
                const typeWriter = () => {
                    if (i < aiResponse.length) {
                        summaryElement.innerHTML += aiResponse.charAt(i);
                        i++;
                        setTimeout(typeWriter, 15); // Adjust speed here
                    }
                };
                typeWriter();

            } catch (error) {
                console.error("Gemini API Error:", error);
                summaryElement.innerHTML = `<span style="color: var(--color-poor);">Error: ${error.message}</span>`;
            } finally {
                btn.disabled = false;
                btn.style.opacity = 1;
            }
        }

        function updateUI(data) {
            // Update AQI
            document.getElementById('aqiValue').textContent = data.aqi;
            const aqiStatus = getAQIStatus(data.aqi);
            const aqiStatusElement = document.getElementById('aqiStatus');
            aqiStatusElement.textContent = aqiStatus.text;
            aqiStatusElement.className = 'metric-status ' + aqiStatus.class;

            // Update Temperature
            document.getElementById('tempValue').innerHTML =
                `${data.temperature.toFixed(1)}<span class="metric-unit">¬∞C</span>`;

            // Update Humidity
            document.getElementById('humidityValue').innerHTML =
                `${data.humidity}<span class="metric-unit">%</span>`;

            // Update Raw Value
            if (document.getElementById('rawValue')) {
                document.getElementById('rawValue').textContent = data.raw;
            }

            // Update AI Summary (Only if NOT using Gemini mode - we keep the manual trigger for Gemini)
            // const summary = generateAISummary(data);
            // document.getElementById('aiSummary').textContent = summary;

            // Update connection status
            document.getElementById('connectionStatus').textContent = '‚óè Live';
            document.getElementById('connectionStatus').style.background = 'rgba(16, 185, 129, 0.3)';

            // Store previous data
            previousData = { ...data };
        }

        // ===== FIREBASE LISTENER =====
        function initFirebaseListener() {
            const dataRef = db.ref('sensor/live');

            document.getElementById('connectionStatus').textContent = '‚óè Waiting for data...';

            dataRef.on('value', (snapshot) => {
                const data = snapshot.val();

                if (data) {
                    // Update connection status
                    document.getElementById('connectionStatus').textContent = '‚óè Live';
                    document.getElementById('connectionStatus').style.background = 'rgba(16, 185, 129, 0.3)';

                    // Update Last Updated Time
                    if (data.timestamp) {
                        const date = new Date(data.timestamp);
                        const timeString = date.toLocaleTimeString() + ' ' + date.toLocaleDateString();
                        const lastUpdatedEl = document.getElementById('lastUpdated');
                        lastUpdatedEl.style.display = 'inline-block';
                        lastUpdatedEl.textContent = 'üïí ' + timeString;
                    }

                    // Update data history
                    updateDataHistory(data);

                    // Update UI
                    updateUI(data);

                    // Update charts
                    updateCharts();
                }
                console.error("Firebase Error:", error);
                document.getElementById('connectionStatus').textContent = '‚óè Connection Error';
                document.getElementById('connectionStatus').style.background = 'rgba(239, 68, 68, 0.3)';
            });

            // Listen for data history (Last 50 points)
            // This replaces client-side history array for charts
            const historyRef = db.ref('sensor/history').limitToLast(50);
            historyRef.on('value', (snapshot) => {
                const data = snapshot.val();
                if (!data) return;

                // Reset arrays
                dataHistory.timestamps = [];
                dataHistory.aqi = [];
                dataHistory.temperature = [];
                dataHistory.humidity = [];

                // Parse object into arrays
                Object.values(data).forEach(record => {
                    const date = new Date(record.timestamp);
                    dataHistory.timestamps.push(date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }));
                    dataHistory.aqi.push(record.aqi);
                    dataHistory.temperature.push(record.temperature);
                    dataHistory.humidity.push(record.humidity);
                });

                updateCharts();
            });

            // Listen for AI Summary from Backend
            const aiRef = db.ref('analysis/latest');
            aiRef.on('value', (snapshot) => {
                const data = snapshot.val();
                if (data && data.text) {
                    document.getElementById('aiSummary').textContent = data.text;
                    if (data.timestamp) {
                        const date = new Date(data.timestamp);
                        document.getElementById('aiLastRun').textContent = 'Updated: ' + date.toLocaleTimeString();
                    }
                }
            });
        }

        // ===== INITIALIZATION =====
        function init() {
            console.log('üöÄ Air Quality Monitor Dashboard Initialized (Firebase Mode)');
            initFirebaseListener();
        }

        // Start the application when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', init);
        } else {
            init();
        }
    </script>
</body>

